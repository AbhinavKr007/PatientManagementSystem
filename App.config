<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>

    <appSettings>
        <!-- Application Information -->
        <add key="ApplicationName" value="Patient Management System" />
        <add key="ApplicationVersion" value="1.0.0" />
        <add key="CompanyName" value="Healthcare Solutions Ltd." />

        <!-- Database Configuration -->
        <add key="DatabaseName" value="PatientManagement.db" />
        <add key="DatabaseBackupInterval" value="7" /> <!-- Days -->
        <add key="DatabaseAutoBackup" value="true" />

        <!-- Application Settings -->
        <add key="AutoSaveInterval" value="30" /> <!-- Seconds -->
        <add key="MaxPatientSearchResults" value="100" />
        <add key="DateFormat" value="dd/MM/yyyy" />
        <add key="CurrencySymbol" value="â‚¹" />

        <!-- Security Settings -->
        <add key="SessionTimeout" value="480" /> <!-- Minutes -->
        <add key="PasswordMinLength" value="8" />
        <add key="EnableAuditLog" value="true" />

        <!-- UI Settings -->
        <add key="DefaultTheme" value="Professional" />
        <add key="ShowSplashScreen" value="true" />
        <add key="RememberWindowPosition" value="true" />

        <!-- Report Settings -->
        <add key="DefaultReportFormat" value="CSV" />
        <add key="ReportDateRange" value="7" /> <!-- Days -->
        <add key="ExportDirectory" value="Reports" />

        <!-- Appointment Settings -->
        <add key="DefaultAppointmentDuration" value="30" /> <!-- Minutes -->
        <add key="AppointmentReminderDays" value="1" />
        <add key="MaxFutureAppointmentDays" value="365" />

        <!-- Billing Settings -->
        <add key="DefaultPaymentTerms" value="30" /> <!-- Days -->
        <add key="TaxRate" value="0.00" /> <!-- Percentage -->
        <add key="LateFeePercentage" value="5.00" />
    </appSettings>

    <connectionStrings>
        <!-- SQLite Connection String -->
        <add name="DefaultConnection" 
             connectionString="Data Source=PatientManagement.db;Version=3;FailIfMissing=False;Journal Mode=WAL;" 
             providerName="System.Data.SQLite" />

        <!-- Backup Connection String -->
        <add name="BackupConnection" 
             connectionString="Data Source=Backups\PatientManagement_Backup.db;Version=3;" 
             providerName="System.Data.SQLite" />
    </connectionStrings>

    <system.diagnostics>
        <trace autoflush="true" indentsize="4">
            <listeners>
                <add name="fileListener"
                     type="System.Diagnostics.TextWriterTraceListener"
                     initializeData="Logs\PatientManagementSystem.log" />
            </listeners>
        </trace>
    </system.diagnostics>

    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <probing privatePath="lib;plugins" />
        </assemblyBinding>
    </runtime>
</configuration>